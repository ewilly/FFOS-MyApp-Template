'use strict';


/* Variables
------------------------*/
app.language = function () { return this.getCurrent(); }; 


/* Init
------------------------*/ 
app.language.init = function () {
	if (!app.settings.get('language')) {
		app.settings.save('language', document.webL10n.getLanguage());		 
	} 
	
	// Localize interface
	var language = app.language.getCurrent();
	document.webL10n.setLanguage(language);
	document.body.setAttribute('data-language', language);
	
	// LTR / RTL
	if (app.language.getDirection() == 'rtl') {
		document.body.classList.remove('ltr');  
		document.body.classList.add('rtl');   
		if (doc) { 
			doc.style.direction = 'rtl';  		
		}		
	} else {
		document.body.classList.remove('rtl');  
		document.body.classList.add('ltr'); 
		if (doc) {
			doc.style.direction = 'ltr'; 
		} 		 
	}
}

app.language.getCurrent = function () {
	return (app.settings.get('language'));
}

app.language.getDirection = function () {
	var language = app.language.getCurrent();
	if (language == 'he' |
			language == 'ar') {
		return 'rtl';			
	} else {
		return 'ltr';
	}
}
